<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

        <LinearLayout

            android:id="@+id/linLayoutVertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_background"
            android:orientation="vertical"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/btnOther"
                android:layout_width="77dp"
                android:layout_height="72dp"
                android:layout_gravity="end"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="-83dp"
                android:background="#00FFFFFF"
                android:contentDescription="@string/others_button"
                app:srcCompat="@drawable/btnothers"
                tools:ignore="SpeakableTextPresentCheck,RedundantDescriptionCheck" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginTop="-5dp"
                android:foregroundGravity="left"
                android:padding="8dp"
                android:paddingBottom="8dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="20dp">

                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="fill_parent"
                    android:layout_height="59dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:text="@string/welcome"
                    android:textAllCaps="true"
                    android:textColor="#403B3B"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="43dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/shape"
                    android:gravity="start"
                    android:letterSpacing="0.2"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:textAllCaps="true"
                    android:textColor="#FDFDFD"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="264dp"
                android:layout_height="126dp"
                android:layout_gravity="end"
                android:contentDescription="@string/home"
                android:paddingStart="10dp"
                android:paddingEnd="20dp"
                app:srcCompat="@drawable/pichome"
                tools:ignore="ImageContrastCheck" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:paddingBottom="15dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="40dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/tvLearn"
                    android:layout_width="391dp"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="0dp"
                    android:fontFamily="sans-serif-black"
                    android:paddingStart="40dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="40dp"
                    android:paddingBottom="10dp"
                    android:text="@string/learn"
                    android:textColor="#403B3B"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnAnimals"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="#FF5A5A"
                        android:drawableEnd="@drawable/animalbtn"
                        android:gravity="start|center_vertical"
                        android:text="@string/animals"
                        android:textColor="#FFFFFF"
                        app:cornerRadius="30dp"
                        app:strokeColor="#FFFFFF"
                        tools:ignore="TextContrastCheck" />

                    <Button
                        android:id="@+id/btnColors"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="#78C0ED"
                        android:drawableEnd="@drawable/colorbtn"
                        android:gravity="start|center_vertical"
                        android:text="@string/colors"
                        android:textColor="#F8F8F8"
                        app:cornerRadius="30dp"
                        tools:ignore="TextContrastCheck" />

                    <Button
                        android:id="@+id/btnAlphabet"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="#4739A0"
                        android:drawableEnd="@drawable/alphabetbtn"
                        android:gravity="start|center_vertical"
                        android:text="@string/alphabet"
                        android:textColor="#F8F8F8"
                        app:cornerRadius="30dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>